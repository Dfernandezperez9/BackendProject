          <h3><%= item.nombre %></h3>
          <img src="/uploads/<%= item.imagen %>" alt="<%= item.nombre %>">
          <p><%= item.descripcion %></p>
          <p>Categoría: <%= item.categoria %></p>
          <p>Precio: <%= item.precio %>€</p>
          <p>Talla: <%= item.talla %></p>
          <a href="/products/<%= item._id %>">Visualizar</a>
        </li>
      <% }); %>
    </ul>
    <a href="#top" id="volver-arriba">Volver arriba</a>
    <h3>Zapatos</h3>
    <ul>
      <% items.filter(function(item) { return item.categoria === 'Zapatos'; }).forEach(function(item) { %>
        <li>
          <h3><%= item.nombre %></h3>
          <img src="/uploads/<%= item.imagen %>" alt="<%= item.nombre %>">
          <p><%= item.descripcion %></p>
          <p>Categoría: <%= item.categoria %></p>
          <p>Precio: <%= item.precio %>€</p>
          <p>Talla: <%= item.talla %></p>
          <a href="/products/<%= item._id %>">Visualizar</a>
        </li>
      <% }); %>
    </ul>
    <a href="#top" id="volver-arriba">Volver arriba</a>
    <h3>Accesorios</h3>
    <ul>
      <% items.filter(function(item) { return item.categoria === 'Accesorios'; }).forEach(function(item) { %>
